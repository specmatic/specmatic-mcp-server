{
  "name": "specmatic-mcp",
  "version": "1.0.0",
  "description": "MCP server wrapper for Specmatic contract testing",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "specmatic-mcp": "./build/index.js"
  },
  "files": [
    "build/",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/agilefaqs/specmatic-mcp-server.git"
  },
  "scripts": {
    "build": "tsc && chmod +x build/index.js",
    "prepack": "npm run build",
    "start": "node build/index.js",
    "dev": "tsc --watch",
    "test:smoke": "npm run build && node test-smoke.js",
    "test:mcp": "npm run build && npx @modelcontextprotocol/inspector-cli --config tests/mcp-inspector.config.json --server specmatic --cli",
    "inspect": "npm run build && npx @modelcontextprotocol/inspector-cli --config tests/mcp-inspector.config.json --server specmatic",
    "docker:build": "docker build -t specmatic-mcp .",
    "docker:run": "docker run --rm -i specmatic-mcp",
    "start:host-network": "docker run --rm -i --network=host specmatic-mcp",
    "setup": "./setup-host.sh"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.2",
    "fast-xml-parser": "^4.3.4",
    "specmatic": "^2.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector-cli": "^0.16.6",
    "@types/node": "^20.11.24",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "mcp",
    "specmatic",
    "contract-testing",
    "openapi"
  ],
  "author": "",
  "license": "MIT"
}